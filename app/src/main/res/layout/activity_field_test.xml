<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Field Test Monitor"
            android:textColor="@color/primary_text"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Controls Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/card_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Band Choice -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Band Choice"
                    android:textColor="@color/button_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerBandChoice"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edittext_background" />

                <!-- SIM Detection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detected SIMs"
                    android:textColor="@color/button_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/tvSim1Info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background_readonly"
                        android:padding="12dp"
                        android:text="SIM 1: Not Detected"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvSim2Info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/edittext_background_readonly"
                        android:padding="12dp"
                        android:text="SIM 2: Not Detected"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- SIM Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SIM Selection"
                    android:textColor="@color/button_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp">

                    <CheckBox
                        android:id="@+id/cbSim1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIM 1"
                        android:textColor="@color/primary_text"
                        android:enabled="false" />

                    <CheckBox
                        android:id="@+id/cbSim2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="SIM 2"
                        android:textColor="@color/primary_text"
                        android:enabled="false" />
                </LinearLayout>

                <!-- Control Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnStart"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_background"
                        android:text="Start Test"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnPause"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/reset_button_background"
                        android:text="Pause"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:enabled="false" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnStop"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/reset_button_background"
                    android:text="Stop Test"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:enabled="false" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Data Table Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDataTable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/main_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardControls">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Title above RecyclerView -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Signal Data Monitor"
                    android:textColor="@color/button_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- RecyclerView with fixed height -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewData"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:scrollbars="vertical" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Report Generate -->
        <Button
            android:id="@+id/btnGenerateReport"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:text="Generate Report"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardDataTable"  />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
