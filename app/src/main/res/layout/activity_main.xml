<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Title at top -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Test Tool Box"
            android:textColor="@color/primary_text"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Instructions/Rules Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/card_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Instructions Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="📋 ব্যবহারের নিয়মাবলী"
                    android:textColor="@color/header_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- WiFi Instructions -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔹 Wi-Fi Test:"
                    android:textColor="@color/instruction_header"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Wi-Fi চালু করুন এবং একটি নেটওয়ার্কে সংযুক্ত হন\n• Location permission দিন SSID দেখার জন্য\n• Wi-Fi Test বাটনে ক্লিক করুন\n• Start Test বাটন দেখা গেলে ক্লিক করুন"
                    android:textColor="@color/instruction_text"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp" />

                <!-- SIM Instructions -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔹 SIM Network Test:"
                    android:textColor="@color/instruction_header"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• SIM কার্ড সঠিকভাবে ঢোকান\n• Phone permission দিন SIM তথ্য পড়ার জন্য\n• Sim Network Test বাটনে ক্লিক করুন\n• SIM তথ্য দেখা গেলে Start Test করুন"
                    android:textColor="@color/instruction_text"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="8dp" />

                <!-- General Instructions -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔹 সাধারণ নিয়ম:"
                    android:textColor="@color/instruction_header"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• সব permission দিন সঠিক ফলাফলের জন্য\n• ভাল নেটওয়ার্ক সিগন্যাল নিশ্চিত করুন\n• Test চলাকালীন অন্য অ্যাপ বন্ধ রাখুন\n• ধৈর্য ধরুন, Test সম্পূর্ণ হতে সময় লাগতে পারে"
                    android:textColor="@color/instruction_text"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- WiFi Test Button with Icon -->
        <Button
            android:id="@+id/btnWifiTest"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/button_background"
            android:drawableLeft="@drawable/ic_wifi"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Wi-Fi Check"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardInstructions" />

        <!-- WiFi SSID Text Box (Initially Hidden) -->
        <TextView
            android:id="@+id/tvWifiSSID"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/textview_background"
            android:padding="12dp"
            android:text="WiFi SSID: Not Connected"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWifiTest" />

        <!-- WiFi Start Test Button (Initially Hidden) -->
        <Button
            android:id="@+id/btnWifiStartTest"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/start_button_background"
            android:text="Start Test"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvWifiSSID" />

        <!-- SIM Network Test Button with Icon -->
        <Button
            android:id="@+id/btnSimNetworkTest"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_background"
            android:drawableLeft="@drawable/ic_sim_card"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Sim Card check"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnWifiStartTest" />

        <!-- SIM 1 Text Box (Initially Hidden) -->
        <TextView
            android:id="@+id/tvSim1Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/textview_background"
            android:padding="12dp"
            android:text="SIM 1: Not Available"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSimNetworkTest" />

        <!-- SIM 2 Text Box (Initially Hidden) -->
        <TextView
            android:id="@+id/tvSim2Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/textview_background"
            android:padding="12dp"
            android:text="SIM 2: Not Available"
            android:textColor="@color/primary_text"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSim1Name" />

        <!-- SIM Start Test Button (Initially Hidden) -->
        <Button
            android:id="@+id/btnSimStartTest"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/start_button_background"
            android:text="Start Test"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSim2Name"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
