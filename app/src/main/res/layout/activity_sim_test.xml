<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Title -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Fill this informations"
            android:textColor="@color/primary_text"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/card_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="25dp">

                <!-- ID Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID (শুধুমাত্র সংখ্যা) *"
                    android:textColor="@color/button_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Enter ID (digits only)"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="12dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Model Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Model (Auto Generated)"
                    android:textColor="@color/button_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etModel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_background_readonly"
                    android:enabled="false"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Build Version Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Build Version (Auto Generated)"
                    android:textColor="@color/button_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etBuildVersion"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/edittext_background_readonly"
                    android:enabled="false"
                    android:gravity="top"
                    android:padding="12dp"
                    android:textColor="@color/readonly_text"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Software Type -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Software Type *"
                    android:textColor="@color/button_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <RadioGroup
                    android:id="@+id/rgSoftwareType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/rbUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:textColor="@color/primary_text"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/rbDebug"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Debug"
                        android:textColor="@color/primary_text"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/rbDemo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Demo"
                        android:textColor="@color/primary_text" />

                </RadioGroup>

                <!-- Field Test Location -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Field Test Location / Area *"
                    android:textColor="@color/button_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/etFieldTestLocation"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_background"
                    android:hint="Enter Location/Area"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <!-- Operator Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operator Select *"
                    android:textColor="@color/button_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <CheckBox
                        android:id="@+id/cbRobi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Robi"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cbAirtel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Airtel"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cbGrameenPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GrameenPhone"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cbBanglalink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banglalink"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/cbTeletalk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Teletalk"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnStartFieldTest"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_background"
                        android:text="Start Test"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnResetField"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/reset_button_background"
                        android:text="Reset Field"
                        android:textColor="@color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>