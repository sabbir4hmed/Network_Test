<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.WCMSProductChecker" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/white</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Background color -->
        <item name="android:windowBackground">@color/background</item>

        <!-- Status bar text color (light/dark) -->
        <item name="android:windowLightStatusBar" >true</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.WCMSProductChecker.Splash" parent="Theme.WCMSProductChecker">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:windowLightStatusBar" >false</item>
    </style>

    <!-- Login Screen Theme -->
    <style name="Theme.WCMSProductChecker.Login" parent="Theme.WCMSProductChecker">
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
</resources>
