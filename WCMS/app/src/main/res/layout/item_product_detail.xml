<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product Model -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Model:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvModel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="NEXG N74"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="end" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginBottom="12dp" />

        <!-- Mobile Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mobile Code:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvMobileCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="MPA000018252936"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end" />

        </LinearLayout>

        <!-- IMEI 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IMEI 1:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvImei1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="350850020251991"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end" />

        </LinearLayout>

        <!-- IMEI 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IMEI 2:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvImei2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="350850020252007"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end" />

        </LinearLayout>

        <!-- Color -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Color:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvColor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Safari Green"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Grade -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Grade:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/grade_badge"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Production Grade -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Production Grade:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvProductionGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

        <!-- Grade Reason (if exists) -->
        <LinearLayout
            android:id="@+id/layoutGradeReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Grade Reason:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvGradeReason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/black"
                android:gravity="end" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- Delivery Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delivery Date / Production Date:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvDeliveryDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="2024-11-16 01:08 PM"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:gravity="end" />

        </LinearLayout>

        <!-- Box Code -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Box Code:"
                android:textSize="14sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tvBoxCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="CKDN7500000401"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>